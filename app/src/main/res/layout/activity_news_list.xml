<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsListActivity"
    >

  <EditText
      android:id="@+id/editTextSearchFromUser"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/searchHere"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <Button
      android:id="@+id/btnSearchNews"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/search"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextSearchFromUser"
      />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerViewNewsList"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnSearchNews"
      />

</androidx.constraintlayout.widget.ConstraintLayout>